{
  "name": "virtualdojo-rooms",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@date-io/date-fns": "^1.3.13",
    "@material-ui/core": "^4.9.8",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/pickers": "^3.2.10",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^10.0.1",
    "date-fns": "^2.12.0",
    "env-cmd": "^10.1.0",
    "firebase": "^7.13.2",
    "husky": "^4.2.3",
    "i18next": "^19.4.2",
    "i18next-browser-languagedetector": "^4.0.2",
    "lint-staged": "^10.1.1",
    "react": "^16.13.1",
    "react-dnd": "^10.0.2",
    "react-dnd-html5-backend": "^10.0.2",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.3.4",
    "react-scripts": "^3.4.1",
    "react-swipeable-views": "^0.13.9",
    "uuid": "^7.0.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint . --ext .js,.jsx",
    "deploy": "env-cmd -f .env.production.local react-scripts build && firebase use default && firebase deploy",
    "deploy:dev": "env-cmd -f .env.development.local react-scripts build && firebase use dev && firebase deploy",
    "deploy:prod": "env-cmd -f .env.production.local react-scripts build && firebase use prod && firebase deploy"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react-hooks": "^3.0.0",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint -- --fix",
      "git add"
    ]
  }
}
